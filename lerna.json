{
  "packages": [
    "packages/*"
  ],
  "version": "0.3.4",
  "lerna": "3.4.3",
  "command": {
    "publish": {
      "allowBranch": [
        "master",
        "release/*"
      ],
      "conventionalCommits": true,
      "message": "chore(release): publish %s"
    }
  },
  "ignoreChanges": [
    "**/test/**",
    "**/*.md"
  ]
}
